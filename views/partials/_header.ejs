<header class="bg-white">
  <div
    class="flex items-center px-8 py-4 justify-between max-w-screen-2xl mx-auto"
  >
    <!-- Logotype -->
    <a href="/">
      <img src="/images/logotype.png" alt="Logo" class="max-w-52" />
    </a>
    <div class="flex flex-row items-center pt-4">
      <!-- Menu -->
      <nav class="hidden lg:block">
        <div class="flex space-x-8 ml-auto">
          <a href="#" class="uppercase font-extrabold hover:underline"
            >Bästsäljare</a
          >
          <a href="#" class="uppercase font-extrabold hover:underline"
            >Nyheter</a
          >
          <a href="#" class="uppercase font-extrabold hover:underline"
            >Inspiration</a
          >
          <a
            href="/product-list"
            class="uppercase font-extrabold hover:underline"
            >Alla posters</a
          >
        </div>
      </nav>

      <!-- Search, Cart, and Dropdown Icon -->
      <div class="flex items-center ml-6">
        <!-- Search Button -->
        <button id="searchBtn" class="p-2 rounded">
          <svg
            xmlns="http://www.w3.org/2000/svg"
