<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order</title>
    <link href="/styles/output.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;600&family=Jaro&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100">
    <%- include('partials/_header') %>

    <div
      class="flex flex-col lg:flex-row gap-6 max-w-screen-2xl mx-auto py-8 px-8"
    >
      <div
        class="flex justify-start bg-white shadow-md rounded-xl p-8 w-full lg:w-2/3"
      >
        <form
          action="/api/orders"
          method="POST"
          class="flex flex-col gap-6 w-full"
        >
          <div class="flex flex-col gap-1">
            <h2 class="text-left normal-case">Betalning</h2>
            <label class="selection-controls">
              <input type="radio" name="payment" value="paypal" checked />
              PayPal
            </label>
            <label class="selection-controls">
              <input type="radio" name="payment" value="klarna" />
              Klarna
            </label>
          </div>

          <div class="flex flex-col gap-1 w-full">
            <h2 class="text-left normal-case">Adress</h2>
            <label>
              Namn
              <input type="text" name="name" required class="input-field" />
            </label>
            <label>
              Adress
              <input type="text" name="address" required class="input-field" />
            </label>
            <div class="flex flex-row gap-2 w-full">
              <label class="w-1/3">
                Postnummer
                <input
                  type="text"
                  name="postal-code"
                  required
                  class="input-field"
                />
              </label>
              <label class="w-2/3">
                Stad
                <input type="text" name="city" required class="input-field" />
              </label>
            </div>
            <label>
              Telefon
              <input type="text" name="phone" required class="input-field" />
            </label>
          </div>
          <div class="flex flex-col gap-1">
            <h2 class="text-left normal-case">Faktureringsadress</h2>
            <label class="selection-controls">
              <input type="radio" name="billing" value="same" checked />
              Samma som leveransadress
            </label>
            <label class="selection-controls">
              <input type="radio" name="billing" value="different" />
              Använd en annan adress
            </label>
          </div>

          <div>
            <label class="selection-controls">
              <input type="checkbox" name="terms" required />
              Jag har läst och accepterar <a href="#">Allmänna villkor</a>
            </label>
          </div>

          <button id="confirmOrderButton" type="submit" class="primary-button">
            Bekräfta beställning
          </button>
        </form>
      </div>

      <!-- Beställningsöversikt -->
      <div
        class="flex flex-col justify-start bg-white shadow-md rounded-xl p-8 w-full lg:w-1/3"
      >
        <h2 class="text-left normal-case">Beställningsöversikt</h2>
        <div id="cart-items"></div>
        <div class="flex flex-col gap-1">
          <p>Delsumma: <span id="subtotal">0.00 SEK</span></p>
          <p>Fraktavgift: <span id="shipping-fee">50.00 SEK</span></p>
          <p>
            <strong>Total: <span id="total">0.00 SEK</span></strong>
          </p>
        </div>
      </div>
    </div>

    <script src="/javascript/orders.js"></script>
  </body>
</html>
